<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="menuStackPane" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.MenuList">
   <children>
      <VBox>
          <children>
              <JFXListView fx:id="menuListView" prefHeight="450.0" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></JFXListView>
            <ToolBar style="-fx-background-color: #FFFFFF;">
              <items>
                  <JFXToggleButton fx:id="showIngredientsButton" onAction="#toggleShowIngredients" scaleX="0.75" scaleY="0.75" style="-fx-background-color: #FF5722;" text="Show Ingredients" textFill="WHITE" />
                  <Pane style="-fx-background-color: #FFFFFF;" HBox.hgrow="ALWAYS" />
                  <JFXToggleButton fx:id="showPriceButton" onAction="#toggleShowPrice" scaleX="0.75" scaleY="0.75" style="-fx-background-color: #FF5722;" text="Show Price" textFill="WHITE" />
              </items>
            </ToolBar>
          </children>
      </VBox>
   </children>
</StackPane>
